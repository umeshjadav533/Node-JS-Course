<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</head>
<body>
  <% if(errors.length > 0){  %>
    <div class="row">
      <div class="col-6">
        <ul class="alert alert-danger" style="list-style-position: inside;">
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
    </div>
  <% } %>
    <form class="col-4 m-5" action="/submitform" method="post">
      <div class="mb-3">
        <label for="useremail" class="form-label">Email address</label>
        <input type="text" class="form-control" id="useremail" name="useremail" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">username</label>
        <input type="text" class="form-control" id="username" name="username" aria-describedby="emailHelp">
      </div>
      <div class="mb-3">
        <label for="userpassword" class="form-label">Password</label>
        <input type="password" class="form-control" name="userpassword" id="userpassword">
      </div>
      <div class="mb-3">
        <label for="userage" class="form-label">userage</label>
        <input type="number" class="form-control" name="userage" value="18" id="userage">
      </div>
      <select class="form-select mb-3" name="usercity">
        <option selected>Select city</option>
        <option value="Dhrangadhra">Dhrangadhra</option>
        <option value="Surendranagar">Surendranagar</option>
        <option value="Paldi">Paldi</option>
      </select>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>
</html>